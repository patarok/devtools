#!/bin/sh

for setup in `detect-dev-setup`; do
    if [ "$setup" == "docker-compose" ]; then
        container=${1:-app}
        if [[ -z "$2" ]]; then				
            command="-f --tail=100"
        else
            command="${@:2}"
        fi
        echo "running command: docker-compose logs $command $container"
        
        docker-compose logs $command "$container"
    fi
done